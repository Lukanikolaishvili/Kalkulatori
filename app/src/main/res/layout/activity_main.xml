<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="100dp" app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/purple_700"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="40sp"
                android:onClick="numberClick"
                android:text="AC"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/purple_700"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="40sp"
                android:onClick="operationClick"
                android:text="÷"/>

    </LinearLayout>


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tableLayout">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="7"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="8"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="9"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="×"
                    android:textColor="@color/white"
                    android:onClick="operationClick"
                    android:background="@color/purple_500"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="4"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="5"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="6"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="–"
                    android:onClick="operationClick"
                    android:textColor="@color/white"
                    android:background="@color/purple_500"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="1"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="2"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="3"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="+"
                    android:onClick="operationClick"
                    android:textColor="@color/white"
                    android:background="@color/purple_500"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="0"
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="."
                    android:onClick="numberClick"
                    android:textColor="@color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="="
                    android:onClick="equalsClick"
                    android:textColor="@color/white"
                    android:background="@color/purple_500"/>
        </TableRow>

    </TableLayout>
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/resultTextView"
            android:textColor="#FFFBFB"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="48sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>